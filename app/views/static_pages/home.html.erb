<% provide :title, t(".home") %>
<p>
  <%= t(".tutorial") %> <%= link_to t(".rubyonrailstutorial"), Settings.railstutorial %>
 </p>
<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render "shared/user_info" %>
      </section>
      <section class="micropost_form">
        <%= render "shared/micropost_form" %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3><%= t ".micropost_feed" %></h3>
      <%= render "shared/feed" %>
    </div>
  </div>
<% else %>
<div class="center jumbotron">
  <h1> <%= t(".welcome") %></h1>
  <h2>
    <%= t(".tutorial") %>
    <%= link_to t(".rubyonrailstutorial"), Settings.railstutorial %>
  </h2>
  <%= link_to t(".sign"), signup_path, class: "btn btn-lg btn-primary" %>
</div>
<%= link_to image_tag("rails.png", alt: "Rails logo"), Settings.rubyonrails %>
<%= link_to image_tag("meo.png", height:"150px", weight: "150px", alt: "Rails logo"), Settings.fb %>
<% end %>
